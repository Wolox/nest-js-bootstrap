{
  "name": "nest-js-bootstrap",
  "version": "0.0.0",
  "description": "wolox nest.js bootstrap",
  "author": "Yovanny López",
  "license": "MIT",
  "keywords": [
    "Node.js",
    "Nest.js",
    "Typescript",
    "Template",
    "Bootstrap"
  ],
  "scripts": {
    "build": "nest build",
    "debug": "nest start --debug --watch",
    "dev": "nest start --watch",
    "doc": "npx compodoc -p tsconfig.json -s --theme laravel --disableCoverage",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:debug": "npm-run-all docker-up",
    "format": "prettier --write \"{src,test}/**/*.ts\"",
    "lint": "eslint \"{src,test}/**/*.ts\" --fix",
    "pipeline": "npm run lint && npm run test:coverage && npm run dependency-check",
    "prebuild": "rimraf app",
    "release": "npx standard-version --release-as ",
    "start": "nest start",
    "start:prod": "node app/main.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "dependency-check": "depcheck --skip-missing"
  },
  "dependencies": {
    "@hapi/joi": "^17.1.1",
    "@nestjs/axios": "^0.0.4",
    "@nestjs/common": "^8.0.11",
    "@nestjs/config": "^1.0.2",
    "@nestjs/core": "^8.0.11",
    "@nestjs/platform-express": "^8.0.11",
    "@nestjs/swagger": "^5.1.0",
    "class-transformer": "^0.4.0",
    "class-validator": "^0.13.1",
    "compression": "^1.7.4",
    "config": "^1.30.0",
    "helmet": "^4.6.0",
    "lodash": "^4.17.21",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.2",
    "rxjs": "^7.4.0",
    "swagger-ui-express": "^4.1.6"
  },
  "devDependencies": {
    "@compodoc/compodoc": "^1.1.15",
    "@nestjs/cli": "^8.1.2",
    "@nestjs/testing": "^8.0.11",
    "@types/jest": "^27.0.2",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^5.0.0",
    "@typescript-eslint/parser": "^5.0.0",
    "depcheck": "^1.4.2",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jest": "^27.2.5",
    "npm-run-all": "^4.1.5",
    "prettier": "^2.4.1",
    "standard-version": "^9.3.1",
    "supertest": "^6.1.6",
    "ts-jest": "^27.0.5",
    "typescript": "^4.4.4"
  },
  "engines": {
    "node": ">= 14.18.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/Wolox/nest-js-bootstrap"
  },
  "config": {
    "ghooks": {
      "pre-commit": "npm run lint && npm test && npm run dependency-check"
    }
  },
  "contributors": [
    "Yovanny López",
    "Maximiliano Espindola",
    "Nicolás Palenque"
  ]
}
